<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.epicodus.wordgame">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="Github Pokemon"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".ui.LoginActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".ui.RepoListActivity" />
        <activity android:name=".ui.ScoreActivity" />
        <activity android:name=".ui.RepoDetailActivity" />
        <activity android:name=".ui.MainActivity" />
        <activity android:name=".ui.MakeAccountActivity" />
        <activity android:name=".TeamActivity"></activity>
    </application>

</manifest>